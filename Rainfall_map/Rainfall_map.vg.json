{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title":"Rainfall in australia",
  "data": {
    "url": "https://raw.githubusercontent.com/nguyenph-git/World_Weather/main/Data/weatherAUS_SA2.csv"
  },
  "transform": [
    {
      "lookup": "state",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/nguyenph-git/World_Weather/main/Data/ne_10m_admin_1_states_provinces.json",
          "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
        },
        "key": "properties.name",
        "fields": ["properties", "type", "geometry"]
      }
    },
    {"filter": "datum.Date == year"}
  ],
  "params": [
    {
      "name": "year",
      "value": 2008,
      "bind": {
        "input": "range",
        "min": 2008,
        "max": 2017,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "vconcat":[{
  "spacing": 200,
  "width": 700,
  "height": 600,
  "projection": {"type": "conicEqualArea"},
  "mark": "geoshape",
  "encoding": {
    "color": {"field": "rain" , "type": "quantitative", "scale": {"domain": [0,8], "scheme": "blues" } },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "state"},
      {"field": "rain", "type": "quantitative"}
    ]
  }
},
{
  "spacing": 200,
  "width": 500,
  "height": 100,
  "title": "Australia rainfall distribution",
    
    "mark": "boxplot",
    
    "encoding": {
      
      "x": {"field": "rain", "type": "quantitative", "scale": {"zero": false}}

    }
  }
  
],
"spacing": 200

}